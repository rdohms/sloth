<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service class="Zend\Expressive\Twig\TwigRendererFactory" id="sloth.templating.twig_factory"/>

        <service class="Zend\Stratigility\FinalHandler" id="sloth.templating.final_handler">

        </service>

        <service class="Zend\Expressive\Twig\TwigRenderer" id="sloth.templating.twig_renderer">
            <factory service="sloth.templating.twig_factory"/>
            <argument type="service" id="service_container"/>
        </service>

    </services>
</container>
