{
    "name": "sloth/sloth",
    "type": "project",
    "description": "HTTP environment for writing Webhook integrations, for example for Slack.",
    "homepage": "https://github.com/rdohms/sloth",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Dohms",
            "homepage": "http://doh.ms/"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-stdlib": "~2.7",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "xtreamwayz/pimple-container-interop": "^1.0",
        "zendframework/zend-expressive-twigrenderer": "^1.0",
        "php-di/php-di": "^5.2",
        "mcrumm/phlack": "^0.7",
        "oscarotero/psr7-middlewares": "^3.14",
        "symfony/var-dumper": "^3.0",
        "webmozart/glob": "^4.1",
        "vlucas/phpdotenv": "^2.2",
        "filp/whoops": "^1.1 || ^2.0",
        "dms/sloth-github-plugin": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "phpspec/phpspec": "^2.5"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DMS\\Sloth\\Plugin\\Github\\": ["plugins/dms/sloth-label-manager/src"]
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit"
    },
    "suggest": {
        "dms/improved-pr-integration": "Send better and more complete information about PR events to Slack"
    }
}
