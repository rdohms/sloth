{
    "name": "sloth/sloth",
    "type": "project",
    "description": "HTTP environment for writing Webhook integrations, for example for Slack.",
    "homepage": "https://github.com/rdohms/sloth",
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Dohms",
            "homepage": "http://doh.ms/"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-stdlib": "~2.7",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "xtreamwayz/pimple-container-interop": "^1.0",
        "zendframework/zend-expressive-twigrenderer": "^1.0",
        "php-di/php-di": "^5.2",
        "mcrumm/phlack": "^0.7",
        "oscarotero/psr7-middlewares": "^3.14",
        "symfony/var-dumper": "^3.0",
        "webmozart/glob": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "filp/whoops": "^1.1 || ^2.0",
        "phpspec/phpspec": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        },
        "psr-0": {
            "": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/",
            "DMS\\Sloth\\Plugin\\Github\\": ["plugins/dms/sloth-label-manager/src", "plugins/dms/better-prs/src"]
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/rdohms/phlack"
        }
    ]
}
